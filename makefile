#------------------------------------------------------
# Makefile for C/C++ Program
#------------------------------------------------------
TARGET=maketen
#------------------------------------------------------
# Default Parameters
#------------------------------------------------------
CXX=g++
CXXFLAGS=
#------------------------------------------------------
# Compile Option
#------------------------------------------------------
-include makefile.opt
#------------------------------------------------------
# Definition
#------------------------------------------------------
.SUFFIXES: .c .cc .h. .o
#---
# Source Files
#---
SRC=$(shell ls *.cc)
HED=$(shell ls *.h)
OBJ=$(SRC:.cc=.o)
#------------------------------------------------------
# rules
#------------------------------------------------------
all: $(TARGET)
$(TARGET): $(OBJ)
	$(CXX) $(CXXFLAGS) -o $@ $<

.cc.o:
	$(CXX) $(CXXFLAGS) -c $< 

dep:
	g++ -MM -MG $(SRC) >makefile.depend

clean:
	rm -f $(TARGET) $(OBJ)

#--------------------------------------------------
-include makefile.depend
